<%= link_to "Sign up now!", '/signup', :class => "signup_button round" %>

<script type="text/javascript">
    var ws_server = "<%= WEBSOCKET_HOST %>"
    var ws_port = <%= WEBSOCKET_PORT %>
    var ws = new WebSocket("ws://" + ws_server + ":" + ws_port);

    ws.onopen = function() {
        ws.send("hello server");
    };
    
    ws.onclose = function() { 
    };      
    
    ws.onmessage = function(evt) { 
        if(evt.data == "play"){
          $("#song")[0].play();
        } else if(evt.data == "pause") {
          $("#song")[0].pause();
        }
    };      
  
</script>

<input type="button" value=">" onclick="ws.send('play');" />
<input type="button" value="||" onclick="ws.send('pause');" />

<audio id="song" preload="auto">
  <source src="song.mp3" type="audio/mpeg" />
  Your browser does not support the audio element.
</audio>
